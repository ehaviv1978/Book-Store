<Window x:Name="winMain" x:Class="BookStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore"
        mc:Ignorable="d"
        Title="Book Store Manager" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblUser" Content="User - Eran Haviv" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnUser" Content="Change User" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="86" Height="27" FontWeight="Bold"/>
        <ListView x:Name="listViewItems" Margin="400,41,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Store Items" HorizontalAlignment="Left" Margin="400,4,0,0" VerticalAlignment="Top" Width="123" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
