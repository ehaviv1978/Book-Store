<Window x:Class="GUI.EmployeeLogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Employee Log In" Height="250" Width="400">
    <Grid>
        <Label Content="Enter Name:" HorizontalAlignment="Left" Margin="74,54,0,0" VerticalAlignment="Top" FontWeight="Normal" FontSize="18"/>
        <TextBox x:Name="TextBoxNameLog" HorizontalAlignment="Left" Margin="191,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" FontSize="18"/>
        <PasswordBox x:Name="TextBoxPasswordLog" HorizontalAlignment="Left" Margin="192,104,0,0" VerticalAlignment="Top" Width="170" FontSize="18"/>
        <Label Content="Enter Password:" HorizontalAlignment="Left" Margin="49,100,0,0" VerticalAlignment="Top" FontWeight="Normal" FontSize="18"/>
        <Button x:Name="btnLogIn" Content="Log In" HorizontalAlignment="Left" Margin="284,166,0,0" VerticalAlignment="Top" Click="btnLogIn_Click" FontSize="18" FontWeight="Bold" Width="76" Height="34"/>


    </Grid>
</Window>
